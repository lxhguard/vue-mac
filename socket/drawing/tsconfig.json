{
  "include": [
      "src/**/*.ts",
      "src/**/*.vue"
  ],
  "exclude": [
      "node_modules"
  ],
  "compilerOptions": 
  {
      "module": "es2015",
      "target": "es5",
      "moduleResolution": "node",
      "allowJs": true,
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {

      },
      "lib": 
      [
          "dom",
          "es5",
          "es2015",
          "es2015.promise"
      ]
  }
}